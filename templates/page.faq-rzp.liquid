<style>
  .set {
    position: relative;
    width: 100%;
    height: auto;
    background-color: #00bed6;
    margin: 20px 0;
    border-radius: 12px;
    box-shadow: 0 0 12px 0 #00000017;
    overflow: hidden;
  }
  .set > a {
    display: block;
    padding: 15px;
    text-decoration: none;
    color: #fff;
    font-weight: 600;
    -webkit-transition: all 0.2s linear;
    -moz-transition: all 0.2s linear;
    transition: all 0.2s linear
  }
  .set > a i {
    float: right;
    margin-top: 2px;
    position: relative
  }
  .set > a.active {
    background-color: #00bed6;
    color: #fff
  }
  .set > a p {
    margin-bottom: 0
  }
  .set > a i::before {
    position: absolute;
    content: "+";
    font-weight: 800;
    font-size: 22px;
    top: -10px;
    right: 0;
  }
  .set > a.active i::before {
    content: "-";
  }
  .content.cust li {
    padding: 10px;
  }
  .content {
    background-color: #00bed6;
    display: none
  }
  .content p {
    padding: 10px 15px;
    margin: 0;
    color: #fff;
    font-weight: 500;
  }
</style>
<div class="banner-section">
  <div class="desktopbanner">
    <img
      src=""
